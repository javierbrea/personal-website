{
  "plugins": [
    "stylelint-scss"
  ],
  "ignoreFiles": [
    "**/*.png",
    "**/*.jpg",
    "**/*.ico"
  ],
  "extends": ["stylelint-config-recommended", "stylelint-config-sass-guidelines"],
  "rules": {
    "selector-class-pattern": "^[a-zA-Z]+$",
    "scss/dollar-variable-pattern": "^[a-zA-Z]+$",
    "max-nesting-depth": 3
  }
}
